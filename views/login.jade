doctype html
html(lang="pt-br")
  head
    title Catch-catch
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible",content="IE=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon", type="image/x-icon", href="../../images/fav-bloco.svg")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css",rel="stylesheet",integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC",crossorigin="anonymous")
  body(class="bg-warning" style="padding: 0px;")
    
    section(class="h-100 d-flex justify-content-center align-items-center")
        div(class="card mt-5")
            div(class="card-header text-start")
                h4 Login 
            div(class="card-content")
                div(id="alert-error", class="alert alert-danger d-none", role="alert")
                form(method="post", action="/auth")
                    div(class="form-control")
                        label(for="email") E-mail:
                        br
                        input(type="email", name="email", id="email", class="form-control", required)
                        label(for="senha") Senha:
                        br
                        input(type="password", name="senha", id="senha", class="form-control", required)
                        br
                        div(class="text-end")
                            button(type="button", class="btn btn-primary", id="btn-submit") Enviar
    
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js",integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p",crossorigin="anonymous")
    script(src="./javascripts/login.js")